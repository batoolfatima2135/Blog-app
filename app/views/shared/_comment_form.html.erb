<% if flash[:success].present? %>
      <div class="alert alert-success my-3">
        <%= flash[:success] %>
      </div>
    <% elsif flash[:error].present? %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>
<%= form_for(@post.comments.new, url: user_post_comments_path(@post.user, @post)) do |form| %>
  <div class="form-group my-2 py-2">
    <%= form.text_area :text, placeholder: "Write a comment...", class: 'form-control mt-2 border-dark' %>
  </div>

  <%= form.submit "Add Comment", class: 'btn btn-primary' %>
 
<% end %>
