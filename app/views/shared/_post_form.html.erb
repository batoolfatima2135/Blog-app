<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

 <%= form_with  model: @post, url: user_posts_path(user_id: @user.id) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control mt-2 border-dark' %>
  </div>

  <div class="form-group my-2 py-2">
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control mt-2 border-dark' %>
  </div>

  <%= form.submit "Add post", class: 'btn btn-primary' %>
<% end %>